<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz_Results">

    <TextView
        android:id="@+id/imageFrame"
        android:layout_width="240dp"
        android:layout_height="166dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:background="#8187ff"
        android:gravity="center"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/resultImage"
        android:layout_width="220dp"
        android:layout_height="140dp"
        android:layout_marginTop="13dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="@+id/imageFrame"
        app:layout_constraintStart_toStartOf="@+id/imageFrame"
        app:layout_constraintTop_toTopOf="@+id/imageFrame" />

    <TextView
        android:id="@+id/youAre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/YouAre"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imageFrame"
        app:layout_constraintStart_toStartOf="@+id/imageFrame"
        app:layout_constraintTop_toBottomOf="@+id/imageFrame" />

    <TextView
        android:id="@+id/quizResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"

        android:background="@color/colorAccent"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageFrame"
        app:layout_constraintStart_toStartOf="@+id/imageFrame"
        app:layout_constraintTop_toBottomOf="@+id/imageFrame" />


    <TextView
        android:id="@+id/resultText"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:gravity="center"
        android:textColor="#D81B60"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imageFrame"
        app:layout_constraintStart_toStartOf="@+id/imageFrame"
        app:layout_constraintTop_toBottomOf="@+id/quizResult" />



    <Button
        android:id="@+id/homeButton"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="0dp"
        android:text="@string/homeButtonText"
        app:layout_constraintBottom_toBottomOf="@id/retakeButton"
        app:layout_constraintEnd_toEndOf="@id/imageFrame"
        android:textColor="@android:color/white"
        android:background="#b61827"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/retakeButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:text="Retake \n Quiz"
        app:layout_constraintStart_toStartOf="@+id/imageFrame"
        app:layout_constraintTop_toBottomOf="@+id/resultText"
        android:background="#ef5350"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        />

</android.support.constraint.ConstraintLayout>