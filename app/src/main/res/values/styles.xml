<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorButtonNormal">@color/secondaryLightColor</item>
        <!--<item name="buttonStyle">@style/ButtonPressed</item>-->
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="ButtonPressed" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorButtonNormal">@color/secondaryDarkColor</item>
    </style>

</resources>
